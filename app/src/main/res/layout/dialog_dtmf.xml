<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/_300dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_45dp"
        android:background="@color/background_top"
        android:visibility="visible" >

        <com.vx.ui.dialpad.DigitsEditText
            android:id="@+id/screen_tab_dialer_editText_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789*#"
            android:freezesText="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:imeOptions="actionGo"
            android:maxLength="25"
            android:enabled="false"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_20dp"
            foo:customFont="OpenSans-Regular.ttf" />

        <ImageView
            android:id="@+id/dtmf_backspace_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="12dp"
            android:layout_weight="5"
            android:clickable="true"
            android:src="@drawable/incall_dialpad_backspace_bg" >
        </ImageView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#4F4F4F" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35dp"
                android:layout_marginRight="@dimen/_35dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35dp"
                android:layout_marginRight="@dimen/_35dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35dp"
                android:layout_marginRight="@dimen/_35dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_numstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35dp"
                android:layout_marginRight="@dimen/_35dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_dialpad_text_textView_numhash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.vx.utils.CustomfontTextview
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/dialpad_digits_drawable_selector"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    foo:customFont="OpenSans-Regular.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="2"
                android:background="@drawable/incall_endcall_bg"
                android:clickable="true"
                android:padding="13dp"
                android:src="@drawable/hide_keypad"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btn_dtmf_hide"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/incall_endcall_bg"
                android:clickable="true"
                android:padding="@dimen/_7dp"
                android:src="@drawable/hide_keypad"
                android:visibility="visible" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="2"
                android:background="@drawable/incall_endcall_bg"
                android:clickable="true"
                android:padding="0dp"
                android:src="@drawable/hide_keypad"
                android:visibility="gone" />

            <!--
               <Button
                android:id="@+id/btn_dtmf_hide"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:background="@drawable/incall_endcall_bg"
                android:text=" Hide "
                android:textSize="16sp"
                android:textColor="#FFF"
                android:textStyle="bold"/>            -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>