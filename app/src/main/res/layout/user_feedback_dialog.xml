<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10dp"
    android:background="@drawable/dialog_roundedcorner_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/feedback_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_rounded_corner_top_shape"
        android:gravity="center"
        android:padding="@dimen/_15dp"
        android:text="Please rate the quality of your Call"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_header"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10dp"
        android:gravity="center_horizontal">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10dp"
            android:numStars="5"
            android:stepSize="1.0" />

        <EditText
            android:id="@+id/comment_box_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55dp"
            android:layout_below="@id/ratingBar"
            android:background="@drawable/rounded_rectangle_edittext"
            android:hint="Write your comment Here"
            android:paddingLeft="@dimen/_5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_box_edt"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center">

            <Button
                android:id="@+id/ignore_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:background="@drawable/login_button_selector"
                android:text="Not Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />

            <Button
                android:id="@+id/submit_feedback_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/login_button_selector"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
