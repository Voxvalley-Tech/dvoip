<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/list_item_selector_callogs"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_7dp"
            android:paddingTop="@dimen/_7dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recents_profilepic_imageview"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8dp"
                android:visibility="visible"
                android:background="@drawable/ic_contacts_avatar"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/recents_profilepic_imageview"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_toRightOf="@id/recents_profilepic_imageview"
                    android:layout_weight="1.5"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/recents_name_relative"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <com.vx.utils.CustomfontTextview
                            android:id="@+id/recents_name_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="hfjkdsha akhfdhlj ahhdfjahl"
                            android:textColor="@color/black"
                            android:textSize="@dimen/recents_listview_item_textsize"
                            foo:customFont="Roboto-Regular_5.ttf"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recents_name_relative"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/recents_calltype_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:focusable="false"
                            android:padding="5dp"
                            android:src="@drawable/incoming"
                            android:visibility="gone" >
                        </ImageView>

                        <com.vx.utils.CustomfontTextview
                            android:id="@+id/recents_calltype_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2dp"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:gravity="left"
                            android:text="incoming"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_11sp"
                            android:visibility="gone"
                            foo:customFont="Roboto-Medium_5.ttf" />

                        <com.vx.utils.CustomfontTextview
                            android:id="@+id/recents_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:gravity="left"
                            android:text="11/Aug/2015 10:15:03"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp"
                            foo:customFont="Roboto-Regular_5.ttf"/>

                        <com.vx.utils.CustomfontTextview
                            android:id="@+id/recents_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_11sp"
                            android:visibility="gone"
                            foo:customFont="Roboto-Regular_5.ttf">
                        </com.vx.utils.CustomfontTextview>

                        <com.vx.utils.CustomfontTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_11sp"
                            android:visibility="gone"
                            foo:customFont="Roboto-Regular_5.ttf">
                        </com.vx.utils.CustomfontTextview>

                        <com.vx.utils.CustomfontTextview
                            android:id="@+id/recents_duration_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_alignParentRight="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:singleLine="true"
                            android:text="200 mins 60 sec"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp"
                            foo:customFont="Roboto-Regular_5.ttf"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_info_img"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="8.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/info_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/reg_button_normal"
                        android:src="@drawable/recent_info_custom" />
                </LinearLayout>
            </LinearLayout>

