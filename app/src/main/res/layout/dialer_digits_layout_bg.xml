<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialpad_digits_drawable_selector"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.vx.utils.CustomfontTextview
        android:id="@+id/view_dialer_button_text_textView_numm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="5dp"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_30sp"
        android:textStyle="normal"
        android:visibility="gone"
        foo:customFont="Roboto-Regular_5.ttf" />

    <com.vx.utils.CustomfontTextview
        android:id="@+id/view_dialer_button_text_textView_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="2"
        android:textColor="@color/dialer_digits_selected_color"
        android:textSize="@dimen/text_30sp"
        android:textStyle="bold"
        foo:customFont="Roboto-Regular_5.ttf"/>

</LinearLayout>