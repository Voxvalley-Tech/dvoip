<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
            <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- Main theme colors -->
        <!--   Branding color for the app bar -->
        <item name="colorPrimary">@color/bg_top</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/bg_top</item>
    </style>

    <style name="AppBaseThemeAcivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- Main theme colors -->
        <!--   Branding color for the app bar -->
        <item name="colorPrimary">@color/bg_top</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/bg_top</item>
    </style>

    <style name="Theme" parent="android:Theme"></style>

    <!-- Default toolbar text style-->

    <style name="Theme.Dialog1" parent="Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

